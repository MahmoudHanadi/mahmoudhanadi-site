EMAIL_PROVIDER=SMTP
SMTP_HOST=example.smtp.host
SMTP_PORT=587
SMTP_USER=username
SMTP_PASS=password

# Plausible configuration
PLAUSIBLE_DOMAIN=mahmoudhanadi.com

# Other tokens (optional)
GITHUB_TOKEN=YOUR_GITHUB_TOKEN
VERCEL_TOKEN=YOUR_VERCEL_TOKEN